{% extends 'base.html.twig' %}

{% block title %}Super Admin{% endblock %}

{% block body %}
    <h1>Super Admin</h1>

    <div class="new_container">
    <h2>{{ 'admin.new'|trans }} : </h2>
        {% for utilisateur in utilisateurs %}
            <p>{{ utilisateur.nom }} (Inscrit le: {{ utilisateur.dateInscription|date('d/m/Y H:i') }})</p>
        {% else %}
            <p>{{ 'admin.no_new'|trans }}</p>
        {% endfor %}
    </div>

    <div class="table-container">
    <h2>{{ 'admin.panier'|trans }}</h2>
    <table>
    <tr>
        <th>Nom: </th>
        <th>Panier ID: </th>
        <th>{{ 'admin.crea_date'|trans }}: </th>
    </tr>
        {% set i = 0 %}
        {% for panier in paniersNonAchetes %}
            <tr>
                <td>{{utilisateursNonPayes[i].nom}}</td>
                <td>{{ panier.id }}</td>
                <td>{{ panier.dateAchat|date('d/m/Y') }}</td>
                {% set i = i + 1 %}
            </tr>
        {% else %}
            <p>{{ 'admin.no_panier'|trans }}</p>
        {% endfor %}
    </table>
    </div>
{% endblock %}
